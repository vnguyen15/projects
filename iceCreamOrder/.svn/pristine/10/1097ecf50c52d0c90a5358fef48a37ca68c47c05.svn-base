package three.progpracticum;

import javax.swing.JComboBox;




/**
 * This is representing an option ice cream Box.
 * 
 * @author Viet Nguyen
 * @version 1
 */

@SuppressWarnings({ "serial", "rawtypes" })
public class ComboBox extends JComboBox {
    
    /**
     * array of string that representing different size of ice cream.
     */
    static final String[] ICECREAM_SIZES = {"Mine (16 oz)", 
        "Ours (32 oz)", "Everybody’s (48 oz)"};

    /**
     * construct ice cream option combo box. 
     */
    @SuppressWarnings("unchecked")
    public ComboBox() {
        super(ICECREAM_SIZES);
        super.setMaximumSize(super.getPreferredSize());
        super.setAlignmentX(LEFT_ALIGNMENT);
    }
 
}
